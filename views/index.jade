extends layout

block content
  .hero-section.bg-gradient-primary.text-dark.py-5.mb-5.w-100
    .container-fluid
      .row.align-items-center
        .col-lg-6
          h1.display-4.fw-bold.mb-3 Welcome to My Blog
          p.lead.mb-4 Discover amazing stories and share your thoughts with our community
          if user
            a.btn.btn-light.btn-lg.me-3(href="/blogs/new")
              span.material-icons.me-2 add_circle
              | Create Your First Post
          else
            a.btn.btn-light.btn-lg.me-3(href="/users/login")
              span.material-icons.me-2 login
              | Get Started
            a.btn.btn-outline-light.btn-lg.text-black(href="/users")
              span.material-icons.me-2 person_add
              | Join Now

        .col-lg-6.text-center
          span.material-icons.display-1.opacity-75 article

  .container
    if user
      .row.justify-content-center.mb-5
        .col-md-8
          .card.border-0.shadow-lg
            .card-body.text-center.p-4
              span.material-icons.display-4.text-success.mb-3 check_circle
              h2.card-title.h4.mb-3 Welcome back, #{user.userName}!
              p.card-text.text-muted Ready to share your thoughts with the world?
              a.btn.btn-success.btn-lg(href="/blogs/new")
                span.material-icons.me-2 add_circle
                | Create New Blog Post

    //- Recent Posts Section
    .row.mb-5
      .col-12
        .d-flex.align-items-center.mb-4
          span.material-icons.me-2.text-primary article
          h3.mb-0 Recent Blog Posts
        .row
          if blogs && blogs.length
            each blog in blogs
              .col-lg-4.col-md-6.mb-4
                .card.h-100.border-0.shadow-sm.hover-lift
                  .card-body.d-flex.flex-column
                    .d-flex.align-items-center.mb-3
                      span.material-icons.me-2.text-primary account_circle
                      h6.card-title.mb-0= blog.User ? blog.User.userName : 'Anonymous'
                    p.card-text.flex-grow-1= blog.content.length > 150 ? blog.content.substring(0, 150) + '...' : blog.content
                    small.text-muted.d-block.mt-3
                      span.material-icons.me-1 schedule
                      | #{blog.createdAt ? new Date(blog.createdAt).toLocaleDateString() : 'Recently'}
          else
            .col-12
              .card.border-0.bg-light
                .card-body.text-center.py-5
                  span.material-icons.display-4.text-muted.mb-3 article
                  h5.card-title.text-muted No posts yet
                  p.card-text.text-muted Be the first to share your story!

    //- Features Section
    .row.mt-5
      .col-12
        h3.text-center.mb-5
          span.material-icons.me-2.text-primary lightbulb
          | Why Choose Our Blog?
      .col-md-4.mb-4
        .card.h-100.border-0.shadow-sm.text-center
          .card-body
            span.material-icons.display-4.text-primary.mb-3 create
            h5.card-title Create & Share
            p.card-text.text-muted Write and publish your thoughts with our easy-to-use platform
      .col-md-4.mb-4
        .card.h-100.border-0.shadow-sm.text-center
          .card-body
            span.material-icons.display-4.text-primary forum
            h5.card-title Engage Community
            p.card-text.text-muted Connect with like-minded people and build meaningful discussions
      .col-md-4.mb-4
        .card.h-100.border-0.shadow-sm.text-center
          .card-body
            span.material-icons.display-4.text-primary group
            h5.card-title Join Community
            p.card-text.text-muted Become part of our growing community of writers and readers

  style.
    .bg-gradient-primary {
      background: linear-gradient(45deg, #e3f2fd, #bbdefb);
    }
    .hover-lift:hover {
      transform: translateY(-5px);
      transition: transform 0.3s ease;
    }
    .hero-section {
      border-radius: 50px;
      overflow: hidden;
 
    }
    .hero-section .display-1{
      font-size:100px;
    }

    /* Additional responsive styles for index page */
    @media (max-width: 768px) {
      .hero-section {
        border-radius: 0 0 30px 30px;
        padding: 2rem 0;
      }
      .hero-section .display-4 {
        font-size: 2.2rem;
      }
      .hero-section .lead {
        font-size: 1.1rem;
      }
      .hero-section .btn {
        margin-bottom: 0.5rem;
      }
      .hero-section .display-1 {
        font-size: 4rem;
      }
      .recent-posts .col-lg-4 {
        margin-bottom: 2rem;
      }
      .features-section .col-md-4 {
        margin-bottom: 2rem;
      }
    }

    @media (max-width: 576px) {
      .hero-section {
        padding: 1.5rem 0;
      }
      .hero-section .display-4 {
        font-size: 1.8rem;
      }
      .hero-section .lead {
        font-size: 1rem;
      }
      .hero-section .btn {
        font-size: 0.9rem;
        padding: 0.75rem 1.5rem;
      }
      .hero-section .display-1 {
        font-size: 3rem;
      }
      .welcome-card .display-4 {
        font-size: 2rem;
      }
      .recent-posts .card {
        margin-bottom: 1.5rem;
      }
      .features-section h3 {
        font-size: 1.5rem;
      }
      .features-section .display-4 {
        font-size: 2.5rem;
      }
    }
