doctype html
html
  head
    title Blog
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css",rel="stylesheet",integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB",crossorigin="anonymous")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap")
    style.
      body {
        font-family: 'Roboto', sans-serif;
        background-color: #f8f9fa;
        color: #333;
      }
      .navbar {
        box-shadow: 0 2px 4px rgba(0,0,0,.1);
        background: linear-gradient(45deg, #e3f2fd, #bbdefb);
        border-radius: 0 0 15px 15px;
      }
      .card {
        box-shadow: 0 2px 8px rgba(0,0,0,.1);
        border: none;
        border-radius: 15px;
        background: #ffffff;
      }
      .btn {
        border-radius: 25px;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.875rem;
        padding: 0.75rem 1.5rem;
        transition: all 0.3s ease;
      }
      .btn-lg {
        font-size: 1rem;
        padding: 0.875rem 2rem;
      }
      .btn-primary {
        background: linear-gradient(45deg, #2196f3, #64b5f6);
        border: none;
        box-shadow: 0 3px 5px rgba(33, 150, 243, 0.3);
      }
      .btn-primary:hover {
        background: linear-gradient(45deg, #1976d2, #42a5f5);
        box-shadow: 0 4px 8px rgba(33, 150, 243, 0.4);
        transform: translateY(-2px);
      }
      .btn-success {
        background: linear-gradient(45deg, #4caf50, #81c784);
        border: none;
        box-shadow: 0 3px 5px rgba(76, 175, 80, 0.3);
      }
      .btn-success:hover {
        background: linear-gradient(45deg, #388e3c, #4caf50);
        box-shadow: 0 4px 8px rgba(76, 175, 80, 0.4);
        transform: translateY(-2px);
      }
      .material-icons {
        font-family: 'Material Symbols Outlined';
        font-weight: normal;
        font-style: normal;
        font-size: 24px;
        line-height: 1;
        letter-spacing: normal;
        text-transform: none;
        display: inline-block;
        white-space: nowrap;
        word-wrap: normal;
        direction: ltr;
      }

      /* Responsive Design */
      @media (max-width: 768px) {
        .navbar-brand span {
          display: none;
        }
        .btn {
          font-size: 0.8rem;
          padding: 0.5rem 1rem;
        }
        .btn-lg {
          font-size: 0.9rem;
          padding: 0.75rem 1.5rem;
        }
        .display-4 {
          font-size: 2.5rem;
        }
        .display-1 {
          font-size: 3rem;
        }
        .card-body {
          padding: 1.5rem;
        }
        .hero-section {
          text-align: center;
          padding: 3rem 0;
        }
        .hero-section .col-lg-6 {
          margin-bottom: 2rem;
        }
      }

      @media (max-width: 576px) {
        .container {
          padding-left: 1rem;
          padding-right: 1rem;
        }
        .btn {
          width: 100%;
          margin-bottom: 0.5rem;
        }
        .d-flex.justify-content-center.gap-3 {
          flex-direction: column;
          align-items: stretch;
        }
        .d-flex.justify-content-center.gap-3 .btn {
          width: 100%;
          margin-bottom: 0.5rem;
        }
        .info-card {
          margin-bottom: 1rem;
        }
        .avatar-circle {
          width: 100px;
          height: 100px;
        }
        .avatar-circle .material-icons {
          font-size: 3rem;
        }
      }
  body
    //- Navigation Bar
    nav.navbar.navbar-expand-lg.navbar-light.shadow
      .container
        a.navbar-brand(href='/')
          span.material-icons.me-2 article
          | My Blog
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.me-auto
            li.nav-item
              a.nav-link(href='/')
                span.material-icons.me-1 home
                | Home

          ul.navbar-nav
            if currentUser
              //- Show when user is logged in
              li.nav-item
                a.nav-link(href='/blogs/new')
                  span.material-icons.me-1 add_circle
                  | Create Blog
              li.nav-item
                a.nav-link(href='/profile')
                  span.material-icons.me-1 person
                  | Profile
              li.nav-item
                form(action='/users/logout', method='POST', style='display: inline;')
                  button.nav-link(type='submit', style='border: none; background: none; color: inherit; padding: 0.5rem 1rem;')
                    span.material-icons.me-1 logout
                    | Logout
              li.nav-item.dropdown
                a.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown')
                  span.material-icons.me-1 account_circle
                  | #{currentUser.username}
                ul.dropdown-menu.dropdown-menu-end
                  li
                    a.dropdown-item(href='/profile')
                      span.material-icons.me-2 person
                      | Profile
                  li
                    hr.dropdown-divider
                  li
                    form(action='/users/logout', method='POST', style='display: inline;')
                      button.dropdown-item(type='submit', style='border: none; background: none; width: 100%; text-align: left;')
                        span.material-icons.me-2 logout
                        | Logout
            else
              //- Show when user is not logged in
              li.nav-item
                a.nav-link(href='/users/login')
                  span.material-icons.me-1 login
                  | Login
              li.nav-item
                a.nav-link(href='/users')
                  span.material-icons.me-1 person_add
                  | Register

    //- Main Content
    main.container.mt-4
      //- Flash Messages
      if messages
        each message in messages
          .alert.alert-dismissible.fade.show(class=`alert-${message.type}` role='alert')
            = message.message
            button.btn-close(type='button', data-bs-dismiss='alert')

      block content

    //- Footer
    footer.bg-dark.text-light.mt-5
      .container.py-4
        .row
          .col-md-6
            p &copy; 2024 My Blog. All rights reserved.
          .col-md-6.text-end
            p Built with Node.js & Express

  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js",integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxMVD2scQbITxI",crossorigin="anonymous")
  script(src="/javascripts/main.js")