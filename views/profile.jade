extends layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-8.col-lg-6
        .card.shadow
          .card-header.bg-primary.text-white.text-center
            h4.mb-0
              i.bi.bi-person-circle.me-2
              | Profile

          .card-body.p-4
            .text-center.mb-4
              i.bi.bi-person-circle.fs-1.text-secondary
              h5.mt-2= user.userName

            .row
              .col-sm-6
                strong Username:
              .col-sm-6= user.userName

            .row.mt-3
              .col-sm-6
                strong User ID:
              .col-sm-6= user.userId

            .text-center.mt-4
              a.btn.btn-primary(href='/blogs/new')
                i.bi.bi-plus-circle.me-2
                | Create Blog
              a.btn.btn-secondary.ms-2(href='/')
                i.bi.bi-house.me-2
                | Back to Home
