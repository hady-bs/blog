extends layout

block content
  div.container.mt-5
    div.card.mx-auto(style="max-width: 500px;")
      div.card-header.bg-primary.text-white
        h4.mb-0 Add New User
      
      div.card-body
        form(action="./users", method="POST")
          div.mb-3
            label.form-label(for="userName") Username
            input.form-control(
              type="text", 
              id="userName",
              name="userName", 
              placeholder="Enter username",
              required
            )
            div.form-text Username must be at least 3 characters long.
          
          div.mb-3
            label.form-label(for="password") Password
            input.form-control(
              type="password", 
              id="password",
              name="password", 
              placeholder="Enter password",
              required
            )
            div.form-text Password must be at least 6 characters long.
          div.form-text if you have email 
            a(href="users/login").text-success login
           
          div.d-grid
            button.btn.btn-success(type="submit") 
              i.bi.bi-person-plus.me-2
              | Create User
    
    //- Show blogs (if any)
    if blogs && blogs.length
      .row.mt-4
        .col-12
          h5.text-center.mb-3 Recent Posts
        each blog in blogs
          .col-md-4.mb-3
            .card
              .card-body
                h6.card-title= blog.author || 'Unknown'
                p.card-text= blog.content
                small.text-muted Posted on: #{blog.createdAt}